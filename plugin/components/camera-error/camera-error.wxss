page{
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
}
.edit_contet{
  padding: 88rpx 50rpx;
  background-color: #fff; 
  text-align: center;
}
.edit_contet .text{
  color: #d7000f ;
  font-size: 26rpx;
}
.edit_contet .vin_box{
  position: relative;
  box-sizing: border-box;
  margin: 0 auto;
  width: 650rpx;
  height: 100rpx;
  line-height: 100rpx;
  border: 2rpx solid #ef7b83;
  border-radius: 8rpx;
}
.edit_contet .vin_box input{
  height:100rpx;
  color: #333;
  font-size: 36rpx;
  font-weight: blod;
  letter-spacing: 5rpx; 
}
.edit_contet .vin_box>image{
  position: absolute;
  top: 124rpx;
  left: 50%;
  margin-left: -63rpx;
  width: 126rpx;
  height: 126rpx;
  transform: rotate(-90deg); 
}
.edit_img_box{
  position: relative;
  width: 650rpx;
  height: 148rpx;
  margin: 30rpx auto 50rpx;
}

.edit_img_box .out_img{
  position: absolute;
  top: 148rpx;
  left: 0;
  width: 148rpx;
  height: 650rpx;
  transform-origin: 0 0; 
  transform: rotate(270deg); 
  z-index: 2; 
}
 .edit_img_box image:nth-child(2){
  position: absolute;
  top: 148rpx;
  left: 0;
  width: 148rpx;
  height: 650rpx;
  transform-origin: 0 0; 
  transform: rotate(270deg);
  
} 
.edit_contet .vin_box .text{
  height: 100%;
  font-size: 30rpx;
  color: #ccc;
  border-radius: 5rpx;
}
.edit_contet .vin_box .loading_box{
  position: absolute;
  top: 124rpx;
  left: 50%;
  margin-left: -63rpx;
  width: 126rpx;
  height: 126rpx;
  line-height: 126rpx;
  background-color: #f0787e;
  border-radius: 50%;
  box-shadow: 0rpx 1rpx 1rpx 1rpx #ccc;
  text-align: center;
}
.edit_contet .vin_box .loading_box image{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 5rpx;
  vertical-align: middle;
}
.take_photo_btn{
  position: fixed;
  left: 50%;
  bottom: 30rpx;
  transform: translate(-50%,0);
  font-size: 30rpx;  
  border: 1px solid #d7000f;  
  width: 688rpx;
  height: 86rpx;
  line-height: 86rpx;
  border-radius: 5px;
  text-align: center;
  color: #d7000f;
}