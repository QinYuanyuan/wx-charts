page {
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
}

.selection {
  width: 100%;
  height: 100%;
}

.selection__item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 24rpx 30rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}

.selection__item__order {
  margin-right: 36rpx;
  color: #d7000f;
}

.selection__item__content {
  width: 88%;
  color: #353535;
}

.arrow {
    width: 18rpx;
    height: 18rpx;
    border-top: 1rpx solid #999;
    border-right: 1rpx solid #999;
    transform: rotate(45deg) translateX(10rpx);
}