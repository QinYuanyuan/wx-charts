page {
  width: 100%;
  height: 100%;
}

.identification {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}

.identification__input {
  height: 86rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 0 20rpx;
}

.identification__input__scan {
  display: flex;
  align-items: center;
}

.identification__input__scan image {
  height: 48rpx;
  width: 48rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.identification__input__key {
  height: 54rpx;
  line-height: 54rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  border: 1rpx solid #f1f1f1;
  border-radius: 8rpx;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  padding: 0 10rpx;
}

.identification__input__key--copy {
  border-radius: 0rpx;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.identification__input__key view:first-child {
  flex: 1;
}

.identification__input__key text {
  font-size: 24rpx;
}

.identification__input__key icon {
  display: flex;
}

.identification__input__key__clear {
  width: 32rpx;
  height: 32rpx;
}

.copy {
  width: 80rpx;
  height: 54rpx;
  background-color: #fff;
  border: 1rpx solid #f1f1f1;
  border-left: none;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  line-height: 54rpx;
  text-align: center;
  color: #2e9be0;
  font-size: 28rpx;
}

.identification__selection image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}

.identification__tip {
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 70rpx;
  background-color: #fff;
  border-top: 1rpx solid #f4f4f4;
  text-align: center;
  font-size: 30rpx;
  color: #353535;
}

.identification__tip--high {
  color: #e17f83;
}

.identification__tip--high:last-child {
  position: relative;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.identification__tip--high:last-child::after {
  content: '';
  /*position: absolute;*/
  /*right: 0;*/
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  transform: rotate(45deg) scale(0.26);
  border-top: 1rpx solid #e17f83;
  border-right: 1rpx solid #e17f83;
}

.identification__output--void {
  padding-top: 60rpx;
  text-align: center;
}

.identification__output--void image {
  width: 256rpx;
  height: 240rpx;
}

.identification__output--void text {
  display: block;
  margin-top: 74rpx;
  color: #5c5c5c;
  font-size: 28rpx;
}

.identification__output--fine__item {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 10rpx 40rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #353535;
}

.identification__output--fine__item:nth-child(odd) {
  background-color: #f7f7f7;
}

.identification__output--fine__item:nth-child(even) {
  background-color: #fff;
}

.identification__output--fine__item view:first-child {
  width: 22%;
  text-align: left;
}

.identification__output--fine__item view:last-child {
  width: 78%;
  text-align: right;
}

.identification__output--fail {
  padding: 60rpx 0;
  background-color: #fff;
}

.identification__output--fail image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 4rpx;
}

.identification__output--fail view:first-child {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #d7000f;
}

.identification__output--fail view:last-child {
  margin-top: 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #5c5c5c;
}

.identification__confirm {
  width: 630rpx;
  height: 80rpx;
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: transparent;
  border-radius: 8rpx;
  border: 1rpx solid #d7000f;
  line-height: 80rpx;
  text-align: center;
  color: #d7000f;
}