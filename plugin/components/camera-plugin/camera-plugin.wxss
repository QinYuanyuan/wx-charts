page,.out-mask{
  width: 100%;
  height: 100%;
}
camera,canvas{
  width: 750rpx;
  height: 80%;
}

.out-mask{ /*外层进行flex布局的盒子*/
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
}
.mask{ /*阴影部分的共同的样式*/
  width: 295rpx;
  height: 100%; 
  background-color: #000;
  opacity: 0.5;
}

.mask-center{
  width: 160rpx;
  height: 100%;
}
.mask-center .mask-center-top,.mask-center .mask-center-bottom{
  width: 100%;
  height: 10%;
}

 .mask-center .photo_area{/*取景框的样式 */
  width: 100％;
  height: 80%;
}
.mask-center .photo_area cover-image{
  width: 100%;
  height: 100%;
}

.text{
  position: fixed;
  top: 13%;
  left: 63%;
  width: 29rpx;
  height: 636rpx;
  z-index: 10;
}
.text cover-image{
  width: 100%;
  height: 100%;
}

.ip_text{
  font-size: 30rpx;
  position: fixed;
  top: 130rpx;
  left: 530rpx;
  transform-origin: 0 0;
  transform: rotate(90deg);
  height: 30rpx;
  width: 530rpx;
  white-space: nowrap; 
  color: #353535;
} 

.btn_area{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 21%;
  text-align: center;
  background-color: #000;
  z-index: 2;
}
.gray_bg{
  background-color: #5c5c5c;
}
.btn_area .btn_camera{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -72rpx;
  margin-left: -72rpx;
  width: 125rpx;
  height: 125rpx;
  border: 7rpx solid #fff;
  border-radius: 50%;
  
}
.btn_area .enable_bg{
  background: linear-gradient(to bottom, #ef585f , #f9aca6);
}
.btn_area .disabled_bg{
  background: linear-gradient(to bottom, #646464 , #d3d3d3);
}
.btn_area .btn_album{
  position: absolute;
  top: 70rpx;
  left: 45rpx;
  transform: rotate(90deg);
}
.btn_area .btn_album image{
  width: 60rpx;
  height: 60rpx;

}
.btn_area .btn_album view{
   margin-top: -10rpx; 
  color: #fff;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, sans-serif;
}
